    "version": "0.2.0",
    "configurations": [
        {
            "name": "Xdebug localhost",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/server.php",
            "cwd": "${fileDirname}",
            "port": 9000
        },
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "hostname": "::",
            "log": true,
            "pathMappings": {
                "/var/www": "${workspaceFolder}"
            },
        }
    ]
}